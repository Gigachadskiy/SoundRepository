@if (!User.Identity.IsAuthenticated)
{
    <div class="container" id="start-container">
        <div class="box">
            <div class="start-content">
                <div class="section-one">
                    <h1>Sound<span style="color: #75a2e5;">Library</span></h1>
                    <p>Discover unique audio files and create masterpieces!</p>
                    <a asp-controller="Users" asp-action="Login" class="btn mybtn">LOGIN</a>
                    <a asp-controller="Users" asp-action="Register" class="btn mybtn">REGISTER</a>
                </div>
                <div class="section-two">
                    <div class="img-box">
                        <img src="~/images/headphoness.png" alt="Headphones" class="w-100">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <section class="container" id="home-container">
        <h1 style="font-size: 3rem; text-decoration:underline; text-decoration-color: #a6bcfb;"><i class="ri-home-2-line" style="color: #75a2e5;"></i>Home</h1>
        <section class="card-container">
            <div class="card-box">
                <div class="card-info">
                    <div class="card-icon">
                        <i class="ri-play-list-line"></i>
                    </div>
                    <div class="card-content">
                        <h3>My Playlists</h3>
                        <p>Listen to music from your playlists!</p>
                        <a asp-controller="UserPlayLists" asp-action="Index" class="btn" id="homebtn">Listen</a>

                    </div>
                </div>
            </div>
            <div class="card-box">
                <div class="card-info">
                    <div class="card-icon">
                        <i class="ri-rhythm-line"></i>
                    </div>
                    <div class="card-content">
                        <h3>Music</h3>
                        <p>Browse our magnificent collection of audiofiles for all purposes!</p>
                        <a asp-controller="Musics" asp-action="Index" class="btn" id="homebtn">Browse</a>
                    </div>
                </div>
            </div>
            <div class="card-box">
                <div class="card-info">
                    <div class="card-icon">
                        <i class="ri-robot-line"></i>
                    </div>
                    <div class="card-content">
                        <h3>Audio Assistant</h3>
                        <p>Cant find just the right thing? Ask our Audio Assistant for advice!</p>
                        <a asp-controller="OpenAI" asp-action="Find" class="btn" id="homebtn">Ask</a>
                    </div>
                </div>
            </div>
        </section>
    </section>
    
    
    
