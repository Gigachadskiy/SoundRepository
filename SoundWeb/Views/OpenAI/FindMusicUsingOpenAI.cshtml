@model BLL.DTO.OpenAIDTO
@{
    ViewData["Title"] = "Find Music Using OpenAI";
}

<h2>Find Music Using OpenAI</h2>

<form asp-action="FindMusicUsingOpenAI" method="post">
    <div class="form-group">
        <label for="Question">Question</label>
        <input type="text" class="form-control" id="Question" name="Question" value="@Model.Question" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Answer))
{
    <h3>Answer:</h3>
    <p>@ViewBag.Answer</p>
}
