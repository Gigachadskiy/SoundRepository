@model BLL.DTO.MusicFinderDTO
@{
    ViewData["Title"] = "Find Music in Database";
}

<h2>Find Music in Database</h2>

<form asp-action="FindMusicInDatabase" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" />
    </div>
    <div class="form-group">
        <label for="Tag">Tag</label>
        <input type="text" class="form-control" id="Tag" name="Tag" value="@Model.Tag" />
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (ViewBag.Results != null)
{
    <h3>Results:</h3>
    <ul>
        @foreach (var music in ViewBag.Results)
        {
            <li>@music.Name by @music.Author.Name</li>
        }
    </ul>
}
