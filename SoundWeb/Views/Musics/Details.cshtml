@model DAL.Models.Music

@{
    ViewData["Title"] = "Details";
}

<h1>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10" style="color: #75a2e5;">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
</h1>

<div class="row">
    <div class="col-md-4">
        @if (Model.Media.FirstOrDefault(m => m.MusicId == Model.Id) != null){
            @if (Model.Media.FirstOrDefault(m => m.MusicId == Model.Id).Picture != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Media.FirstOrDefault(m => m.MusicId == Model.Id).Picture)" class="img-fluid" />
            }
        }
        
    </div>
    <div class="col-md-6">
        <audio controls="controls" class="w-100">
            <source src="@Url.Action("GetMusicFile", new { id = Model.Id })" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>

        @if (Model.Media.FirstOrDefault(m => m.MusicId == Model.Id) != null)
        {

            <div>
                <a asp-action="Download" asp-route-musicId="@Model.Id" class="btn" id="createbtn" style="border-radius: 50%; width: 44px; height: 44px;"><i class="ri-download-2-fill"></i></a>
            </div>
            <br />
            <div>
                <a asp-action="EditMusic" asp-route-musicId="@Model.Id" class="btn" id="createbtn" style="border-radius: 50%; width: 44px; height: 44px;"><i class="ri-pencil-line"></i></a>
            </div>
            <br />
            <div>
                <a asp-controller="UserPlayListsMusics" asp-action="AddMusicToPlaylist" asp-route-musicId="@Model.Id" class="btn" id="createbtn" style="border-radius: 50%; width: 44px; height: 44px;"><i class="ri-play-list-add-line"></i></a>
            </div>

            @if (Model.Media.FirstOrDefault(m => m.MusicId == Model.Id).Picture == null)
            {
                <div>
                    <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="imageFile">Upload Picture <i class="ri-upload-2-fill"></i></label>
                            <input type="file" class="form-control-file" id="imageFile" name="imageFile" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </form>
                </div>
            }
        }
        else
        {

            <div>
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="uploadedFile">Upload Music File <i class="ri-upload-2-fill"></i></label>
                        <input type="file" class="form-control-file" id="uploadedFile" name="uploadedFile" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        }
    </div>
</div>
<br />
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn" id="createbtn" style="width: 130px;">Edit</a>
    }
    <a asp-action="Index" class="btn" id="createbtn" style="width: 130px;">Back to List</a>
</div>


