@model DAL.Models.UserPlayListsMusic

@{
    ViewData["Title"] = "Add Music to Playlist";
}

<h1>Add Music to Playlist</h1>

<h4>Select a Playlist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMusicToPlaylist">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserPlaylistId" class="control-label"></label>
                <select asp-for="UserPlaylistId" class="form-control" asp-items="ViewBag.UserPlaylistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
